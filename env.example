# GitHub App Configuration
APP_ID=your_app_id_here
WEBHOOK_SECRET=your_webhook_secret_here
PRIVATE_KEY_PATH=path/to/your/private-key.pem

# Code Review Configuration
# Set to 'true' to use local Ollama instead of Azure OpenAI (default: true)
USE_LOCAL_LLM=true

# Azure OpenAI Configuration (for code review)
# Only required if USE_LOCAL_LLM=false
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_URL=https://your-resource.openai.azure.com/openai/deployments/your-deployment/chat/completions?api-version=2023-05-15
